{{ 'section-faq.css' | asset_url | stylesheet_tag }}
<div class="container ">
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'faq' -%}
        {% comment %} First FAQ item {% endcomment %}
        <button class="accordion {{ section.settings.content_alignment }} ">
          {{- block.settings.button_label | escape -}}
        </button>
        <div class="panel {{ section.settings.content_alignment }}">
          <p>
            {{ block.settings.text }}
          </p>
        </div>
        <div>
          {{ block.settings.image | image_url: width: 100 | image_tag }}
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "faq",
  "settings": [
    {
    "type": "select",
    "id": "content_alignment1",
    "options": [
      {
        "value": "left",
        "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
      },
      {
        "value": "center",
        "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
      },
      {
        "value": "right",
        "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
      }
    ],
    "default": "center",
    "label": "t:sections.rich-text.settings.content_alignment1.label"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "t:sections.rich-text.blocks.text.name",
      "limit": 10,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "t:sections.rich-text.blocks.text.settings.text.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_label_1.label",
          "info": "t:sections.rich-text.blocks.buttons.settings.button_label_1.info"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image-banner.blocks.settings.image.label"
        }

      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.rich-text.presets.name",
      "blocks": [
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
           var acc = document.getElementsByClassName("accordion");
           // var panel = document.getElementsByClassName("panel");
           // panel.style.display = "none"
           var i;
           for (i = 0; i < acc.length; i++) {
  	acc[i].addEventListener("click", function() {
  		this.classList.toggle("active");
  		var panel = this.nextElementSibling;
  		if (panel.style.display === "block") {
  			panel.style.display = "none";
  		} else {
  			panel.style.display = "block";
  		}
  	});
  }
{% endjavascript %}
